@model KidKinder.Entities.Contact
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>KidKinder Galeri Sayfası</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Free HTML Templates" name="keywords" />
    <meta content="Free HTML Templates" name="description" />

    <!-- Favicon -->
    <link href="~/Templates/kidkinder-1.0.0/img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Handlee&family=Nunito&display=swap"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />

    <!-- Flaticon Font -->
    <link href="~/Templates/kidkinder-1.0.0/lib/flaticon/font/flaticon.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/Templates/kidkinder-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Templates/kidkinder-1.0.0/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Templates/kidkinder-1.0.0/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Navbar Start -->
    <div class="container-fluid bg-light position-relative shadow">
        <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0 px-lg-5">
            <a href=""
               class="navbar-brand font-weight-bold text-secondary"
               style="font-size: 50px">
                <i class="flaticon-043-teddy-bear"></i>
                <span class="text-primary">KidKinder</span>
            </a>
            <button type="button"
                    class="navbar-toggler"
                    data-toggle="collapse"
                    data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between"
                 id="navbarCollapse">
                <div class="navbar-nav font-weight-bold mx-auto py-0">
                    <a href="/Default/Index/" class="nav-item nav-link">Anasayfa</a>
                    <a href="/Menu/AboutIndex/" class="nav-item nav-link">Hakkımızda</a>
                    <a href="/Menu/ClassRoomIndex/" class="nav-item nav-link">Sınıflarımız</a>
                    <a href="/Menu/TeacherIndex/" class="nav-item nav-link">Öğretmenlerimiz</a>
                    <a href="/Menu/GalleryIndex/" class="nav-item nav-link active">Galeri</a>
                    <a href="/Menu/ContactIndex/" class="nav-item nav-link">İletişim</a>
                </div>
                <a href="/Login/AdminLogin/" class="btn btn-primary px-4">Admin Giriş</a>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <!-- Header Start -->
    <div class="container-fluid bg-primary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center"
             style="min-height: 400px">
            <h3 class="display-3 font-weight-bold text-white">İletişim</h3>

        </div>
    </div>
    <!-- Header End -->
    <div class="container-fluid pt-5">
        <div class="container">
            <div class="text-center pb-2">
                <p class="section-title px-5">
                    <span class="px-2">İletişim</span>
                </p>
                <h1 class="mb-4">Tüm Merak Ettiklerinizi Sorun!</h1>
            </div>
            <div class="row">
                <div class="col-lg-7 mb-5">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" method="post">
                            <div class="control-group">
                                <input type="text"
                                       class="form-control"
                                       name="NameSurname"
                                       placeholder="Adınız" />

                            </div>
                            <div class="control-group">
                                <input type="email"
                                       class="form-control"
                                       Name="Email"
                                       placeholder="Epostanız" />

                            </div>
                            <div class="control-group">
                                <input type="text"
                                       class="form-control"
                                       name="Subject"
                                       placeholder="Başlık" />

                            </div>
                            <div class="control-group">
                                <textarea class="form-control"
                                          rows="6"
                                          Name="Message"
                                          placeholder="Mesajınız"></textarea>

                            </div>
                            <div>
                                <button class="btn btn-primary py-2 px-4"
                                        type="submit"
                                        id="sendMessageButton">
                                    Mesaj Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-5">
                    <h3 class="text-primary mb-4">Bizimle İletişime Geçin</h3>
                    <div class="d-flex">
                        <h4 class="fa fa-map-marker-alt text-primary"></h4>
                        <div class="pl-3">
                            <h5 class="text-white">Adres</h5>
                            <p>@ViewBag.adres</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <h4 class="fa fa-envelope text-primary"></h4>
                        <div class="pl-3">
                            <h5 class="text-white">Eposta</h5>
                            <p>@ViewBag.email</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <h4 class="fa fa-phone-alt text-primary"></h4>
                        <div class="pl-3">
                            <h5 class="text-white">Telefon</h5>
                            <p>@ViewBag.phone</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!-- Footer Start -->
    <div class="container-fluid bg-primary mb-5">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194971.281977908!2d28.86747876834938!3d40.221823294963166!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca1582d8d45695%3A0x61a00555fc973392!2sBursa!5e0!3m2!1str!2str!4v1709378072491!5m2!1str!2str" width="1500" height="455" style="" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
        
        <!-- Footer End -->
        <!-- Back to Top -->
