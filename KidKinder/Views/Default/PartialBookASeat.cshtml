@model KidKinder.Entities.BookASeat
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-5 mb-lg-0">
                <p class="section-title pr-5">
                    <span class="pr-2">Ön Kayıt İçin Hemen Başvurun!</span>
                </p>
                <h1 class="mb-4">Hemen Kaydolun</h1>
                <p>
                    Kontenjanlarımız dolmadan okulumuza kaydolmak için yandaki formu doldurun ve size mail atalım!
                </p>
                <ul class="list-inline m-0">
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>100% Şeffaflık
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>100% Güven
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Profesyonellerin elinden eğitim.
                    </li>
                </ul>
                <a href="" class="btn btn-primary mt-4 py-2 px-4">Şimdi Kaydol!</a>
            </div>
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Hızlı Kayıt</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        <form method="post">
                            <div class="form-group">
                                <input type="text"
                                       class="form-control border-0 p-4"
                                       placeholder="Adınız"
                                       name="Name"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                <input type="email"
                                       class="form-control border-0 p-4"
                                       placeholder="E-Postanız"
                                       name="Email"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.ClassRoom, (List<SelectListItem>)ViewBag.siniflar, new { @class = "table table-bordered"  })
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-block border-0 py-3"
                                        type="submit">
                                    Kayıt ol
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
